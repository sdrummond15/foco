    <languages folder="site">
        <language tag="pt-BR">language/pt-BR.com_courses.ini</language>
        <language tag="pt-BR">language/pt-BR.com_courses.sys.ini</language>
    </languages>
    <administration>
        <menu img="../media/com_courses/images/menu/course.png">com_courses</menu>
        <submenu>
            <menu link="option=com_courses&amp;view=courses" view="courses" img="../media/com_courses/images/menu/course.png" alt="Courses/Courses">com_courses_courses</menu>
        </submenu>
        <files folder="admin">
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>languages</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>course.php</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
        </files>
